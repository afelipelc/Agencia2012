<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/fondobar"
    android:orientation="horizontal"
    android:padding="5dp"
    android:paddingBottom="0dp"
    android:paddingTop="0dp" >


    <Button
        android:id="@+id/CancelOptBtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="0.1"
        android:background="@drawable/redondeado"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="Cancelar"
        android:textColor="@color/textoboton"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center|left" android:paddingLeft="6dp" android:paddingRight="6dp">


        <TextView
            android:id="@+id/TituloEditBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>


    <Button
        android:id="@+id/OkBtn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="0.1"
        android:background="@drawable/redondeado"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="Ok"
        android:textColor="@color/textoboton"
        android:textSize="14sp" />

</LinearLayout>