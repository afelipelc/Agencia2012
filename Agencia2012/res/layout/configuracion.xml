<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/fondo"
              android:orientation="vertical">
    <include
            android:id="@+id/bareditinclude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/actionbaredit" />

    <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="0.52"
            android:gravity="center|top"
            android:orientation="vertical"
            android:padding="6dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearLayout3">

                <TextView
                        android:text="URL de Servicios Web: "
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/textoetiqueta"/>

            <EditText
                    android:id="@+id/URLServicios"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/AltoTextBox"
                    android:background="@drawable/fondotextbox"
                    android:inputType="text"
                    android:paddingLeft="6dp"
                    android:textColor="@color/textoetiquetaf"
                    android:textSize="@dimen/SizeTextBox"
                    android:hint="URL de los Web Services."/>

        </LinearLayout>

        </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:layout_weight="0.04"
            android:padding="10dp" >

        <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@string/pietext"
                android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</LinearLayout>