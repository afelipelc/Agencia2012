<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/fondo"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center|top"
            android:paddingTop="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

        <TextView
                android:id="@+id/Titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agencia 2012"
                android:textColor="#ffffff"
                android:textSize="24sp" />

        <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        <EditText
                android:id="@+id/NombreUsuarioTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/AltoTextBox"
                android:inputType="text"
                android:textSize="@dimen/SizeTextBox"
                android:background="@drawable/fondotextbox"
                android:textColor="@color/textoetiquetaf"
                android:paddingLeft="6dp"
                android:hint="Nombre de usuario">
                <requestFocus />
                </EditText>

         <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp" />

        <EditText
                android:id="@+id/PasswordTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/AltoTextBox"
                android:inputType="textPassword"
                android:textSize="@dimen/SizeTextBox"
                android:background="@drawable/fondotextbox"
                android:textColor="@color/textoetiquetaf"
                android:paddingLeft="6dp"
                android:hint="Contraseña"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

        <Button
                android:id="@+id/IniciarSesionBtn"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/redondeado"
                android:text="Iniciar Sesión"
                android:textColor="@color/textoboton"
                android:textSize="16sp" />

        </LinearLayout>

</LinearLayout>