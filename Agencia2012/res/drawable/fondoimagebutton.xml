<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">    
    <item android:state_focused="true">
        <shape
    	android:shape="rectangle" >
   
		     <gradient
		        android:startColor="#C9FADC"
		        android:endColor="#FFFFFF"
		        android:angle="90" />
		     
		    <padding
		        android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="6dp"/>    
		</shape>
   </item>
   <item android:state_pressed="true">
        <shape
    	android:shape="rectangle" >
   
		     <gradient
		        android:startColor="#EFFEF4"
		        android:endColor="#FFFFFF"
		        android:angle="90" />
		     
		    <padding
		        android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		    <corners android:radius="6dp"/>    
		</shape>
   </item>
</selector>